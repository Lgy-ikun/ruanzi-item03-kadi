<view class="page-container">
  <!-- 顶部渐变背景栏（含右上角二维码） -->
  <view class="top-bar">
    <!-- 左侧头像+用户信息 -->
    <view class="left-wrap">
      <image class="avatar" src="{{avatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="user-info-wrap">
        <text class="username">{{name || 'YUAN_170'}}</text>
        <view class="card-tag">卡狄D套餐</view>
      </view>
    </view>
    <!-- 右上角二维码图标 -->
    <image class="qrcode-icon" src="/images/qrcode.png" mode="aspectFit" bindtap="gotoQrcode"></image>
  </view>

  <!-- 模块1：卡狄D套餐 -->
  <view class="card-module">
    <text class="card-title">卡狄D套餐</text>
    <text class="card-detail" bindtap="gotocardDetail">查看详情></text>
  </view>

  <!-- 模块2：资产模块（个人余额/咖啡券/储值卡/电子券 横向排列） -->
  <view class="asset-module">
    <view class="asset-item">
      <text class="asset-num">{{money || 480.00}}</text>
      <text class="asset-name">个人余额</text>
    </view>
    <view class="asset-item">
      <text class="asset-num">{{coffeeCoupon || 4977.96}}</text>
      <text class="asset-name">咖啡券</text>
    </view>
    <view class="asset-item">
      <text class="asset-num">{{depositCard || 0.00}}</text>
      <text class="asset-name">储值卡</text>
    </view>
    <view class="asset-item">
      <text class="asset-num">{{electronicCoupon || 0.00}}</text>
      <text class="asset-name">电子券</text>
    </view>
  </view>

  <!-- 模块3：功能图标网格 -->
  <view class="func-grid-module">
    <!-- 第一行 -->
    <view class="func-item" bindtap="gotoEcommerceOrder">
      <image class="func-icon" src="/images/func/ecommerce-order.png" mode="aspectFit"></image>
      <text class="func-text">电商订单</text>
    </view>
    <view class="func-item" bindtap="gotoTasteCustom">
      <image class="func-icon" src="/images/func/taste-custom.png" mode="aspectFit"></image>
      <text class="func-text">口味定制</text>
    </view>
    <view class="func-item" bindtap="gotoNotice">
      <image class="func-icon" src="/images/func/notice.png" mode="aspectFit"></image>
      <text class="func-text">公告</text>
    </view>
    <view class="func-item" bindtap="gotoCouponCenter">
      <image class="func-icon" src="/images/func/coupon-center.png" mode="aspectFit"></image>
      <text class="func-text">领券中心</text>
    </view>

    <!-- 第二行 -->
    <view class="func-item" bindtap="gotoMyCoupon">
      <image class="func-icon" src="/images/func/my-coupon.png" mode="aspectFit"></image>
      <text class="func-text">我的优惠券</text>
    </view>
    <view class="func-item" bindtap="gotoAddress">
      <image class="func-icon" src="/images/func/address.png" mode="aspectFit"></image>
      <text class="func-text">收货地址</text>
    </view>
    <view class="func-item" bindtap="gotoCollection">
      <image class="func-icon" src="/images/func/collection.png" mode="aspectFit"></image>
      <text class="func-text">我的收藏</text>
    </view>
    <view class="func-item" bindtap="gotoMemberOrder">
      <image class="func-icon" src="/images/func/member-order.png" mode="aspectFit"></image>
      <text class="func-text">会员订单</text>
    </view>

    <!-- 第三行 -->
    <view class="func-item" bindtap="gotoShareholderStore">
      <image class="func-icon" src="/images/func/shareholder-store.png" mode="aspectFit"></image>
      <text class="func-text">微股东门店</text>
    </view>
    <view class="func-item" bindtap="gotoSubAccount">
      <image class="func-icon" src="/images/func/sub-account.png" mode="aspectFit"></image>
      <text class="func-text">子账户</text>
    </view>
    <view class="func-item" bindtap="gotoMyFriend">
      <image class="func-icon" src="/images/func/my-friend.png" mode="aspectFit"></image>
      <text class="func-text">我的好友</text>
    </view>
    <view class="func-item" bindtap="gotoInvoice">
      <image class="func-icon" src="/images/func/invoice.png" mode="aspectFit"></image>
      <text class="func-text">发票管理</text>
    </view>

    <!-- 第四行 -->
    <view class="func-item" bindtap="gotoInviteCode">
      <image class="func-icon" src="/images/func/invite-code.png" mode="aspectFit"></image>
      <text class="func-text">邀请码</text>
    </view>
    <view class="func-item" bindtap="gotoSetting">
      <image class="func-icon" src="/images/func/setting.png" mode="aspectFit"></image>
      <text class="func-text">设置</text>
    </view>
    <view class="func-item empty"></view>
    <view class="func-item empty"></view>
  </view>
</view>