.page-container {
  position: relative;
  width: 100%;
  height: 100vh;
  background-color: white;
}

/* 恢复原来的loading-container样式 */
.loading-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.coffee-logo {
  position: absolute;
  z-index: 2;
  width: 189rpx;
  height: 108rpx;
  top: 160rpx;
  left: 40rpx;
}

.coffee-beans {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.loading-container .countdown {
  position: absolute;
  padding: 10rpx 20rpx;
  z-index: 2;
  font-size: 26rpx;
  bottom: 100rpx;
  right: 40rpx;
  border-radius: 30rpx;
  color: rgb(255, 255, 255);
  border: 1px solid white;
}

.loading-container button {
  position: absolute;
  z-index: 2;
  bottom: 210px;
  background-color: rgb(145, 66, 29);
  color: white;
  width: 180rpx;
  font-size: 40rpx;
}

/* 新版加载页样式 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #ffffff;
}

.loading-img {
  width: 200rpx;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.loading .countdown {
  font-size: 28rpx;
  color: #999;
  margin-top: 20rpx;
}

.skip {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: #999;
  padding: 10rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 30rpx;
}

/* 隐私弹窗样式 */
.privacy-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999 !important;
}

.privacy-content {
  width: 85%;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.privacy-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  color: #333;
}

.privacy-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #666;
  margin-bottom: 40rpx;
}

.privacy-detail {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
}

.privacy-detail text {
  margin-bottom: 10rpx;
}

.privacy-link {
  color: #CDAEF2;
  display: inline;
}

.privacy-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.reject-btn, .agree-btn {
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: bold;
}

/* 修改不同意按钮样式 */
.reject-btn {
  background-color: #d3cbcb;
  color: #ffffff;
  border: none;
}

.agree-btn {
  background-color: #CDAEF2;
  color: #fff;
}

.dev-clear-btn {
  position: absolute;
  bottom: 10px;
  left: 10px;
  background-color: rgba(0, 0, 0, 0.2);
  color: rgba(255, 255, 255, 0.5);
  font-size: 10px;
  padding: 4px;
  border-radius: 4px;
  z-index: 999;
}