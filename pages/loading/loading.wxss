.loading-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.coffee-logo {
  position: absolute;
  z-index: 2;
  width: 189rpx;
  height: 108rpx;
  top: 160rpx;
  left: 40rpx;
}

.coffee-beans {
  width: 100%;
  height: 100%;
}

.countdown {
  position: absolute;
  padding: 10rpx 20rpx;
  z-index: 2;
  font-size: 26rpx;
  position: absolute;
  bottom: 100rpx;
  right: 40rpx;
  border-radius: 30rpx;
  color: rgb(255, 255, 255);
  border: 1px solid white;
}

button {
  position: absolute;
  z-index: 2;
  bottom: 210px;
  background-color: rgb(145, 66, 29);
  color: white;
  width: 180rpx;
  font-size: 40rpx;
}