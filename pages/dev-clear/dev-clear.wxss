.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 60rpx;
}

.content {
  width: 100%;
}

.status {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 10rpx;
  margin-bottom: 40rpx;
}

.cleared {
  color: green;
  font-weight: bold;
}

.not-cleared {
  color: red;
  font-weight: bold;
}

.action-btns {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 60rpx;
}

.btn {
  padding: 20rpx;
  border-radius: 10rpx;
}

.clear-btn {
  background-color: #e57373;
  color: white;
}

.home-btn {
  background-color: #64b5f6;
  color: white;
}

.notice {
  padding: 20rpx;
  background-color: #fff9c4;
  border-radius: 10rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff8f00;
} 