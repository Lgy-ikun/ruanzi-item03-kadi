<!-- 新版“立即充值” -->
<view class="lijichongzhi">
  <view class="title">立即充值</view>
  <view class="content">
    <view class="price">
      <text>￥{{pricePerUnit || 0}}</text>
    </view>
    <view class="amount">
      <!-- <button class="decrease" data-quantity="{{quantity}}" bindtap="onDecrease">-</button>
      <text class="quantity-text">{{quantity}}</text>
