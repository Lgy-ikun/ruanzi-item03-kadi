      <view class="img" bindtap="onDecrease">
        <image src="{{tupianUrl}}/new/gd-decrease.png" mode="" />
      </view>
      <text>{{quantity}}</text>
      <view class="img" bindtap="onIncrease">
        <image src="{{tupianUrl}}/new/gd-increase.png" mode="" />
      </view>
    </view>
  </view>
  <view class="desc">
    <text>需要60%现金和40%消费券</text>
    <text>金额：<text style="font-weight: 600;">{{showMoney}}</text> 消费券：<text style="font-weight: 600;">{{showQuan}}</text></text>
  </view>
  <!-- <view class="btn" bindtap="onRecharge">
    <text>确定</text>
  </view> -->
  <view style="display: flex;justify-content: space-around; position: absolute; bottom: 150rpx;left: 50%; transform: translateX(-50%);">
    <view class="recharge-button" bindtap="confirmChange">立即充值</view>
    <view class="gocharge-button" bindtap="onRecharge">立即升级</view>
  </view>
  <view class="useless"></view>
</view>