/* 全局页面样式 */
page {
  background-color: #f5f5f5;
}

.page-container {
  width: 100%;
  box-sizing: border-box;
  padding-bottom: 20rpx;
}

/* 自定义导航栏核心样式（适配所有手机） */
.custom-nav-bar {
  width: 100%;
  height: 170rpx; /* 导航栏高度（适配小程序默认导航栏） */
  padding: 40rpx 20rpx 0rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx; /* 和套餐列表拉开间距 */
  position: relative;
}

/* 返回按钮样式 */
.back-btn {
  position: absolute;
  left: 20rpx;
  top: 70%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 用CSS绘制箭头 */
.back-icon {    
  width: 24rpx;
  height: 24rpx;
  border-left: 5rpx solid black;
  border-bottom: 5rpx solid black;
  transform: rotate(45deg);
}
/* 导航栏标题（加粗） */
.nav-title {
  font-size: 34rpx;
  color: #000000;
  font-weight: bold; /* 标题加粗 */
  margin-top: 22rpx;
}

/* 套餐列表容器 */
.card-list {
  margin: 0 20rpx;
}

/* 套餐列表项 */
.card-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

/* 套餐头部 */
.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}
.header-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}
.main-title {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}
.sub-title {
  font-size: 28rpx;
  color: #999;
}
.header-right .tag {
  background-color: #f0f0ff;
  color: #6a7efc;
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 支付方式行 */
.pay-row {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.pay-label {
  font-size: 28rpx;
  color: #666;
}
.pay-money {
  font-size: 28rpx;
  color: #6a7efc;
  font-weight: bold;
}
.pay-coupon {
  font-size: 28rpx;
  color: #ff9500;
  font-weight: bold;
}

/* 详情行 */
.detail-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}
.detail-item {
  width: 48%;
  display: flex;
  justify-content: space-between;
}
.detail-label {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}
.detail-value {
  font-size: 26rpx;
  color: #333;
  font-weight: bold;
}

/* 立即购买按钮 */
.buy-btn {
  background: linear-gradient(90deg, #6a7efc, #8d9eff);
  color: #fff;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  padding: 20rpx;
  border-radius: 40rpx;
  margin-top: 20rpx;
}