<wxs module="_">
  module.exports.contain = function (arr, key) { return arr.indexOf(key) > -1; }
</wxs>
<view class="container">
  <view class="order-list">
    <block wx:for="{{orders}}" wx:key="orderId">
      <view class="order-item">
        <view class="order-checkbox {{_.contain(selectedIds,item.orderId)?'active' : ''}}" data-id="{{item.orderId}}" bindtap="onCheckboxTap"></view>
        <!-- <view wx:for="{{dataList}}" wx:key="index" class="card {{_.contain(selectedIds,item.orderId)?'card--active' : ''}}"> -->
        <view class="order-info">
          <text class="amount">开票金额：<text class="ww">￥{{item.amount}}</text></text>
          <text class="order-number">订单号：<text class="ww1">{{item.orderNumber}}</text></text>
          <text class="order-time">下单时间：<text class="ww2">{{item.orderTime}}</text></text>
        </view>
      </view>
      <!-- </view> -->
    </block>
  </view>
  <view class="footer">
    <view class="select-all {{selectAll ? 'active' : ''}}" data-checked="{{selectAll}}" bindtap="onSelectAllTap">
      {{selectAll ? '已全选' : '全选'}}
    </view>
    <text class="total-amount">共 ¥{{totalAmount}}</text>
    <view class="next-button" bindtap="onNextTap">下一步</view>
  </view>
</view>