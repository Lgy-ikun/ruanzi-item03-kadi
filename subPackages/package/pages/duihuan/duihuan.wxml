<!-- 兑换弹窗 -->
<view class="duihuan-mask" wx:if="{{mask}}">
  <view class="top" bind:tap="closeMask"></view>
  <view class="bottom">
    <!-- 收货地址 -->
    <view class="address">
      <view class="title">收货地址</view>
      <view class="content">
        <image src="{{tupianUrl}}/new/location.png" mode=""/>
        <text class="text">北京市朝阳区广渠门外大街垂杨柳1号</text>
        <text class="jiantou">></text>
      </view>
    </view>
    <!-- 商品信息 -->
    <view class="info">
      <view class="title">商品信息</view>
      <view class="content">      
        <view class="left">
          <image src="{{tupianUrl}}/new/goods1.png" mode=""/>
        </view>
        <view class="right">
          <text class="right-title">咖啡杯</text>
          <text class="right-desc">醇香浓缩卡拉非也 4489咖啡杯</text>
          <text class="right-price">200积分</text>
        </view>
      </view>
    </view>
    <!-- 购买数量 -->
    <view class="amount">
      <view class="title">购买数量</view>
      <view class="content">
        <image src="{{tupianUrl}}/new/gd-decrease.png" mode=""/>
        <text>1</text>
        <image src="{{tupianUrl}}/new/gd-increase.png" mode=""/>
      </view>
    </view>
    <!-- 实际应付 -->
    <view class="pay">
      <view class="title">实际应付</view>
      <view class="content">
        <text>200积分</text>
      </view>
    </view>
    <!-- 按钮 -->
    <view class="btn">确定兑换</view>
  </view>
</view>