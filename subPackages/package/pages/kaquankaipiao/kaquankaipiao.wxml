<wxs module="_">
  module.exports.contain = function (arr, key) { return arr.indexOf(key) > -1; }
</wxs>
<view class="container">
  <view class="order-list">
    <block wx:for="{{orders}}" wx:key="order_id">
       
      <!-- <block wx:for="{{orders}}" wx:key="order_id" wx:if="{{item.order_status == 9 || item.order_status == 99}}"> -->
      <view class="order-item">
        <view class="order-checkbox {{_.contain(selectedIds,item.id)?'active' : ''}}" data-id="{{item.id}}" bindtap="onCheckboxTap"></view>
        <view class="order-info">
          <text class="amount">开票金额：<text class="ww">￥{{item.total}}</text></text>
          <text class="order-number">订单号：<text class="ww1">{{item.id}}</text></text>
          <text class="order-time">下单时间：<text class="ww2">{{item.time}}</text></text>
        </view>
      </view>
    </block>
    <view class="unless" style="width: 100%; height: 60rpx;"></view>
  </view>
  <view class="footer">
    <view class="select-all {{selectAll ? 'active' : ''}}" data-checked="{{selectAll}}" bindtap="onSelectAllTap">
      {{selectAll ? '已全选' : '全选'}}
    </view>
    <text class="total-amount">共 ¥{{totalAmount}}</text>
    <button class="next-button" bindtap="onNextTap">下一步</button>
  </view>
</view>