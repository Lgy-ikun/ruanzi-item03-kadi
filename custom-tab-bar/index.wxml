<view class="custom-tabbar-wrapper">
  <van-tabbar active="{{ active }}" custom-class="custom-tabbar" border="{{false}}"  >
    <van-tabbar-item bindtap="loadPage" wx:for="{{routerList}}" data-url="{{item.pagePath}}" wx:key="index">
      <image
        slot="icon"
        src="{{ item.iconPath }}"
        mode="aspectFit"
        style="width: 30px; height: 18px;"
      />
      <image
        slot="icon-active"
        src="{{ item.selectedIconPath }}"
        mode="aspectFit"
        style="width: 30px; height: 18px;"
      />
          {{item.text}}
    </van-tabbar-item>
  </van-tabbar>
</view>



